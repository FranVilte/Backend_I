<h1>Detalles del Carrito</h1>

<table class="striped">
  <thead>
    <tr>
      <th>ID Producto</th>
      <th>Descripcion</th>      
      <th>Precio</th>
      <th>Stock</th>
      <th>Categoria</th>
      <th>Cantidad</th>
    </tr>
  </thead>
  <tbody>
    {{#each cart.products}}
    <tr>
      <td>{{this.product.title}}</td>
      <td>{{this.product.description}}</td>
      <td>{{this.product.price}}</td>
      <td>{{this.product.stock}}</td>
      <td>{{this.product.category}}</td>
      <td>{{this.quantity}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

