<h1>
    Carts Page
</h1>

<ul class="collection">    
    <table class="striped">
    <thead>
        <tr>
        <th>ID</th>
        <th></th>
        </tr>
    </thead>        
    <tbody id="product-table-body">
        {{#each carts.docs}}
        <tr>
            <td>
                <strong>{{this.id}}</strong>  
            </td>
            <td>
                <a href="/carts/{{this.id}}" class="btn btn-primary">Ver Carrito</a>
            </td>
        </tr>         
        {{/each}}
    </tbody>        
    </table>
  
    <div class="position-relative m-4">

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#if carts.hasPrevPage}}
          <li class="page-item">
            <a class="page-link" href="/carts?page={{carts.prevPage}}&&limit=5">
              Previous
            </a>
          </li>
        {{/if}}

        {{#if carts.hasNextPage}}
          <li class="page-item"><a
              class="page-link"
              href="/carts?page={{carts.nextPage}}&&limit=5"
            >Next</a></li>
        {{/if}}

      </ul>
    </nav>
    <p class="btn btn-primary">
      Current Page:
      {{carts.page}}
    </p>
  </div>
</ul>